#!/usr/bin/env bash

# META-HELP:1:show this help

__pfm-help() {
    echo "Usage: pfm cmd [option...]"
    echo
    echo "Commands:"
    (
        shopt -s nullglob
        grep "^# *META-HELP" "$PFM_EXEC"/* \
            | sed 's/.*pfm-\(.*\):.*META-HELP *:\(.*\):\(.*\)$/\2 \1 \3/' \
            | sort -n \
            | cut -f 2- -d ' ' \
            | awk '{
                $1 = sprintf(" - %-10s :", $1);
                print;
            }'
    )
}

:; __pfm-help "$@"
